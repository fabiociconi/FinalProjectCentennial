{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
	],
	"baseUrl": ".",
	"paths": {
		"@app/entity": ["../entity"],
		"@app/service/*": ["./src/app/service/*"],
		"@app/env": ["./src/environments/environment"]
	},
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
